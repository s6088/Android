<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="50dp">

    <View android:id="@+id/up_line"
        android:background="#455a64"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="-5dp"
        android:layout_above="@+id/item_dot_iv"
        android:layout_marginStart="22.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22.5dp" />

    <ImageView android:id="@+id/item_dot_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp" />

    <View android:id="@+id/down_line"
        android:background="#455a64"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginTop="-4dp"
        android:layout_below="@+id/item_dot_iv"
        android:layout_marginStart="22.5dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22.5dp"
        android:layout_alignParentLeft="true" />


    <TextView
        android:textAppearance="@style/TextViewRegular"
        android:textSize="20sp"
        android:id="@+id/item_route_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/item_dot_iv"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_dot_iv" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorBackground" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView android:id="@+id/logo"
        android:layout_width="128.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:src="@drawable/ic_search_black_24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true" />

    <TextView android:textSize="20.0sp"
        android:textColor="@color/text_color_normal"
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48.0dip"
        android:layout_marginTop="40.0dip"
        android:text="Use As"
        android:layout_below="@id/logo"
        style="@style/TextViewBold" />

    <android.support.v7.widget.CardView
        android:onClick="onClick"
        android:id="@+id/cvStudent"
        android:background="@color/colorWhite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginTop="24.0dip"
        android:layout_marginRight="32.0dip"
        android:layout_below="@+id/select"
        app:cardCornerRadius="4.0dip">

        <TextView android:textAppearance="@style/TextViewRegular"
            android:textSize="16.0sp"
            android:textColor="@color/text_color_normal"
            android:id="@+id/tvStudent"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Student"
            android:drawableRight="@drawable/ic_check_circle_black_24dp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:onClick="onClick"
        android:id="@+id/cvTeacher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginRight="32.0dip"
        android:layout_below="@+id/cvStudent"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="0.0dip">

        <TextView android:textAppearance="@style/TextViewRegular"
            android:textSize="16.0sp" android:textColor="@color/text_color_normal"
            android:id="@+id/tvTeacher"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Teacher" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:onClick="onClick"
        android:id="@+id/cvStuff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginRight="32.0dip"
        android:layout_below="@+id/cvTeacher"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="0.0dip">

        <TextView android:textAppearance="@style/TextViewRegular"
            android:textSize="16.0sp"
            android:textColor="@color/text_color_normal"
            android:id="@+id/tvStuff"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Stuff" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:id="@+id/cvStart"
        android:onClick="onClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32.0dip"
        android:layout_marginTop="38.0dip"
        android:layout_marginRight="32.0dip"
        android:layout_below="@+id/cvStuff"
        app:cardBackgroundColor="@color/text_color_normal"
        app:cardCornerRadius="4.0dip">
        <TextView android:textAppearance="@style/TextViewRegular"
            android:textSize="16.0sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:id="@+id/tvStart"
            android:padding="16.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Lets Start"
            android:drawableTint="@color/text_color_green" />
    </android.support.v7.widget.CardView>

    <ImageView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_directions_bus_black_24dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>